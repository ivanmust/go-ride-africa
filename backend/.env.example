# PostgreSQL (use your own instance: Neon, RDS, Railway, or local)
DATABASE_URL=postgresql://user:password@localhost:5432/goride

# JWT secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-secret-at-least-32-chars

# API port
PORT=3000

# Mapbox token (exposed via GET /api/mapbox-token)
MAPBOX_ACCESS_TOKEN=pk.your-mapbox-token

# Base URL for file URLs (e.g. http://localhost:3000 or your deployed API URL)
API_BASE_URL=http://localhost:3000

# Frontend URL for password reset links and Flutterwave redirect (e.g. http://localhost:5173)
FRONTEND_URL=http://localhost:5173

# Flutterwave (get from https://dashboard.flutterwave.com/ → Settings → API Keys)
FLW_SECRET_KEY=FLWSECK_TEST-xxxx
# Optional: used only if you need public key on backend
# FLW_PUBLIC_KEY=FLWPUBK_TEST-xxxx

# Flutterwave webhook: secret hash you set in Dashboard → Settings → Webhooks (same value in both places)
FLW_WEBHOOK_SECRET=your_secret_hash
